package ordenacionArrays;

public class Avanzados {
	
	//A continuación vemos el método de ordenación de Inserción para entender mejor el Shell, ya que éste es una versión mejorada de Inserción
	public static int[] metodoInsercion(int[]array, int tamanyo)
	{
		int i, j, aux;
		for(i=1;i<tamanyo;i++)
		{
			for(j=i;j>0&&array[j-1]>array[j]&&j>0;j--)
			{
				aux = array[j]; 
				array[j] = array[j-1];
				array[j-1] = aux;
			}
		}
		return array;
	}
	

}
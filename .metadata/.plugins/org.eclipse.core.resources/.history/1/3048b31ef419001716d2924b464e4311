package pruebaFicheros2;
import java.io.*;
public class Prueba2 {

	public static void main(String[] args) {
		
		String ruta=".\\src\\pruebaFichero2\\prueba2.txt";
		FileWriter fw;
		FileReader fr;
		try
		{
			fw=new FileWriter(ruta);
			fr=new FileReader(ruta);
			fw.write("esto es una prueba");
			fw.close();
			int valor=fr.read();
			while(valor!=1)
			{
				System.out.println((char)valor);
				valor=fr.read();
			}
		}catch(IOException e)
		{
			e.printStackTrace();
		}finally{
			fr.close();
		}

	}

}
